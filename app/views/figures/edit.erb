<form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Figure Name: <p><input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>"></p>
    
    Choose an existing title:
    <br></br>
    <% Title.all.each do |title| %>
        <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"<%= 'checked' if @figure.titles.include?(title) %>><%= title.name %>
    <% end %>

    <br></br>
    and/or create a new one:
    <p><input id="new_title" type="text" name="title[name]"></p>

    Choose an existing landmark:
    <br></br>
    <% Landmark.all.each do |landmark| %>
        <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"<%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <% end %>
    <br></br>
    and/or create a new one:
    <p><input id="new_landmark" type="text" name="landmark[name]"></p>
    
    <input type="submit" value="Edit Figure">
</form>